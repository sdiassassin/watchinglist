<!DOCTYPE html>
<html lang="en">

<%- include ../frontend/layouts/header.ejs %>

<body>

<%- include ../frontend/layouts/menubar.ejs %>

<section class="page-content">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="row">
                    <div class="col-lg-12">
                        <h3>Sign In</h3>
                    </div>
                </div>
                <hr/>
                <% if(error && error.length > 0){ %>
                    <div class="alert alert-danger">
                        <%= error %>
                    </div>
                <% } else if(success && success.length > 0 ){ %>
                    <div class="alert alert-success">
                        <%= success %>
                    </div>
                <% } %>
                <form class="form-account" method="post" action="/auth/login">
                    <fieldset>
                        <div class="form-row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label>Email Address</label>
                                    <input type="email" name="email" value="admin@admin.com" class="form-control" placeholder="" required/>
                                </div>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label>Password</label>
                                    <input type="password" value="qqqqqqq" name="password" class="form-control" placeholder="" required/>
                                </div>
                            </div>
                        </div>
                    </fieldset>
                    <fieldset>
                        <div class="form-group text-right">
                            <p class="notice">Don't have an account yet? Click here to <a href="/auth/register">sign up</a>.</p>
                            <p class="notice">Forgot your password? Click here to <a href="forgot-password.html">recover your password</a>.</p>
                            <button class="btn btn-primary">Sign In</button>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</section>

<%- include ../frontend/layouts/footer.ejs %>

</body>
</html>
