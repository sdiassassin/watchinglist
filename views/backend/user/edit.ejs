<!DOCTYPE html>
<html lang="en">
<%- include ../layouts/header.ejs %>
<body>
<div class="wrapper">
    <%- include ../layouts/sidebar.ejs %>
    <!-- Page Content  -->
    <div id="content">
        <%- include ../layouts/navbar.ejs %>
        <div class="admin-main-content">
            <h2>Edit User</h2>
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            User Details
                        </div>
                        <div class="card-body">
                            <% if(error && error.length > 0){ %>
                                <div class="alert alert-danger">
                                    <%= error %>
                                </div>
                            <% } else if(success && success.length > 0 ){ %>
                                <div class="alert alert-success">
                                    <%= success %>
                                </div>
                            <% } %>
                            <form action="/admin/users/update/<%= user_info.user_id %>" method="post">
                                <div class="row">
                                    <div class="col-lg-3">
                                        <div class="user-avatar-wrap">
                                            <div class="avatar-wrap">
                                                <img id="avatar-image"
                                                     src="<%- (user_info.avatar != "" && user_info.avatar != undefined) ? user_info.avatar : '/assets/img/img_avatar.png' %>">
                                            </div>
                                        </div>
                                        <div class="avatar-progress">
                                            <div class="progress-bar progress-bar-striped progress-bar-animated"
                                                 role="progressbar" aria-valuenow="0" aria-valuemin="0"
                                                 aria-valuemax="100">0%
                                            </div>
                                        </div>
                                        <button type="button" class="btn btn-outline-primary upload-avatar">
                                            <input class="upload" type="file" id="avatar-input" accept="image/*">Upload Avatar
                                        </button>
                                    </div>
                                    <div class="col-lg-9">
                                        <div class="row">
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label for="fname">First Name</label>
                                                    <input type="text" name="fname" value="<%= user_info.fname %>" class="form-control" id="fname">
                                                </div>
                                                <div class="form-group">
                                                    <label for="sname">Last Name</label>
                                                    <input type="text" name="sname" value="<%= user_info.sname %>"
                                                           class="form-control" id="sname">
                                                </div>
                                                <div class="form-group">
                                                    <label for="email">Email address</label>
                                                    <input type="email" name="email"  value="<%= user_info.email %>"
                                                           class="form-control" id="email" required>
                                                </div>
                                                <div class="form-group">
                                                    <label for="password">Password</label>
                                                    <input type="password" name="password"
                                                           class="form-control" id="password">
                                                </div>
                                                <div class="form-group">
                                                    <label for="confirm_password">Confirm Password</label>
                                                    <input type="password" name="confirm_password" class="form-control" id="confirm_password">
                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label for="address1">Address Line1</label>
                                                    <input type="text" name="address1" value="<%= user_info.address1 %>"
                                                           class="form-control" id="address1">
                                                </div>
                                                <div class="form-group">
                                                    <label for="address2">Address Line2</label>
                                                    <input type="text" name="address2" value="<%= user_info.address2 %>"
                                                           class="form-control" id="address2">
                                                </div>
                                                <div class="form-group">
                                                    <label for="fb_link">Facebook Profile</label>
                                                    <input type="text" name="fb_link" value="<%= user_info.fb_link %>"
                                                           class="form-control" id="fb_link" placeholder="https://facebook.com/me">
                                                </div>
                                                <div class="form-group">
                                                    <label for="tw_link">Twitter Profile</label>
                                                    <input type="text" name="tw_link" value="<%= user_info.tw_link %>"
                                                           class="form-control" id="tw_link" placeholder="https://twitter.com/me">
                                                </div>
                                                <div class="form-group">
                                                    <label for="inst_link">Instagram Profile</label>
                                                    <input type="text" name="inst_link" value="<%= user_info.inst_link %>"
                                                           class="form-control" id="inst_link" placeholder="https://instagram.com/me">
                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <button type="submit" class="btn btn-primary">Update User</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        var user_id = '<%= user_info.user_id; %>';
    </script>
    <%- include ../layouts/footer.ejs %>
    <%- include ../sub/cropperjs.ejs %>
</div>
</body>
</html>
