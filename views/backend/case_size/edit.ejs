<!DOCTYPE html>
<html lang="en">
<%- include ../layouts/header.ejs %>
<body>
<div class="wrapper">
    <%- include ../layouts/sidebar.ejs %>
    <!-- Page Content  -->
    <div id="content">
        <%- include ../layouts/navbar.ejs %>
        <div class="admin-main-content">
            <h2><%= (pg_m)?"Edit":"Add"; %> Case Size</h2>
            <div class="row">
                <div class="col-lg-6">
                    <div class="card">
                        <div class="card-body">
                            <% if(error && error.length > 0){ %>
                                <div class="alert alert-danger">
                                    <%= error %>
                                </div>
                            <% } else if(success && success.length > 0 ){ %>
                                <div class="alert alert-success">
                                    <%= success %>
                                </div>
                            <% } %>
                            <div>
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="row">
                                            <div class="col-lg-12">
                                                <h5>Details</h5>
                                                <hr>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-lg-12">
                                                <form method="post" action="/admin/case-size/update?csid=<%= (pg_m) ? cs_info.cs_id : "" %>">
                                                    <div class="form-group">
                                                         <label>Case Size</label>
                                                        <input type="number" name="name" id="name" class="form-control" value="<%= (pg_m) ? cs_info.name : "" %>"
                                                               placeholder="e.g 39mm" required>
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="description">Description</label>
                                                        <textarea name="description" id="description" class="form-control" rows="6" required
                                                                  placeholder="About this Case Size"><%= (pg_m) ? cs_info.description : "" %></textarea>
                                                    </div>
                                                    <div class="form-group">
                                                        <button class="btn btn-primary"><%= (pg_m)?'Save':'Add' %> Case Size</button>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include ../layouts/footer.ejs %>
</div>
</body>
</html>
